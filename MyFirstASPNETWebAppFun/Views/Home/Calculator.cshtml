@{
    ViewData["Title"] = "Tutoring Calculator";
}

<h2>Tutoring Calculator</h2>

<div>
    <label for="hours">Number of Hours Needed:</label>
    <input type="number" id="hours" min="1" required />
    <span class="error" style="color: red;"></span>
</div>

<div>
    <label>Hourly Rate:</label>
    <input type="text" id="hourlyRate" value="25" readonly />
</div>

<button id="calculateTotal">Calculate Total</button>

<div>
    <label>Total:</label>
    <span id="total"></span>
</div>

<a href="/">Back to Home</a>

@section Scripts {
    <script src="~/js/calculator.js"></script>
}
